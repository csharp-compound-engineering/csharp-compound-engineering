  <ItemGroup>
    <PackageVersion Include="QuikGraph" Version="2.5.0" />
  </ItemGroup>

  <!-- Resilience -->
  <ItemGroup>
    <PackageVersion Include="Polly" Version="8.5.0" />
  </ItemGroup>

  <!-- JSON -->
  <ItemGroup>
    <PackageVersion Include="System.Text.Json" Version="10.0.2" />
  </ItemGroup>

